{
  "name": "challenge-bot",
  "version": "1.0.0",
  "private": true,
  "description": "A challenge bot for PingCAP challenge program.",
  "author": "Rustin-Liu <rustin.liu@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/tidb-community-bots/challenge-bot",
  "homepage": "https://github.com/tidb-community-bots/challenge-bot",
  "bugs": "https://github.com/tidb-community-bots/challenge-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "standard src/**/*.ts test/**/*.ts --fix",
    "test": "jest --coverage && standard src/**/*.ts test/**/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "typeorm": "ts-node ./node_modules/.bin/typeorm"
  },
  "dependencies": {
    "mysql": "^2.14.1",
    "probot": "^9.5.3",
    "probot-commands-pro": "^1.0.1",
    "probot-scheduler": "^2.0.0-beta.1",
    "reflect-metadata": "^0.1.10",
    "typedi": "^0.8.0",
    "typeorm": "0.2.25",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^8.0.29",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^4.2.5",
    "jest": "^25.1.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "ts-jest": "^25.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "ignore": [
      "/docs"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
